{
  "parser": "babel-eslint",

  "ecmaFeatures": {
    "jsx": true
  },

  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "no-eval": 2,
    "strict": 0,
    "dot-notation": [2, { "allowKeywords": true }],
    "semi": [0, "never"],
    "eqeqeq": [2, "allow-null"],
    "no-undef": 2,
    "no-unused-vars": 2,
    "quotes": [2, "single", "avoid-escape"],
    "no-trailing-spaces": 0,
    "no-underscore-dangle": 0,
    "no-multi-spaces": 0,
    "no-unused-expressions": 0,
    "key-spaceing": [2, {
      "beforeColon": false,
      "afterColon": false
    }]
  }
}